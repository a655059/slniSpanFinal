@model IEnumerable<prjiSpanFinal.Models.CBigType>

@{
    ViewData["Title"] = "Home Page";
}
@section Styles{
    <link href="~/css/HomeStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/ItemIndex.css" />
}
<body>
    <div class="container">
        <div class="HomepageIndex">
            <section class="rounded-3">
                <div class="row">
                    <div class="col-2 view rounded-start">
                        <div class="list-group">
                            @foreach (var item in Model)
                                @Html.ActionLink(@item.BigTypeName, "Index", "Category", "", new { @class = "list-group-item list-group-item-action" })
                        </div>
                    </div>
                    <div class="col-1"></div>
                    <!--Carouset-->
                    <div class="col-9 align-items-center ">
                        <div class="row cateheader">
                            <div class="cateheader-1">
                                <div id="carouselExampleIndicators" class="carousel slide " data-bs-interval="2000" data-bs-ride="carousel">
                                    <div class="carousel-indicators">
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                    </div>
                                    <div class="carousel-inner d-flex">
                                        <div class="carousel-item active">
                                            <img src="~/img/Homepage/DM1.png" class="d-block w-100"/>
                                        </div>
                                        <div class="carousel-item  ">
                                            <img src="~/img/Homepage/DM1.png" class="d-block w-100" />
                                        </div>
                                        <div class="carousel-item ">
                                            <img src="~/img/Homepage/DM1.png" class="d-block w-100" />
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                            <div class="split2" ></div>
                            <div class="cateheader-2">
                                <div class="row justify-content-between dm">
                                    <div class="col-6">
                                        <img src="~/img/Homepage/DM2.png" class="img-fluid d-block w-100 rounded-2" />
                                    </div>
                                    <div class="col-6 ">
                                        <img src="~/img/Homepage/DM2.png" class="img-fluid d-block w-100 rounded-2" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/Carouset-->
                </div>

            </section>
        </div>
        <div class="clearfix visible-xs"> </div>
        <div class="split">
        </div>
        <section>
            <div class="d-flex justify-content-center">
                <div class="row">
                    <div class="text-start">
                        <div>
                            <span class="fs-3 fw-bold text-primary">猜你喜歡</span>
                            <span class="fs-6 text-muted">有著你想要的東西...</span>
                        </div>
                        <div class="itembody">
                            @{int itemstock = 12;
                                <div class="itemcol" id="itemcol">
                                    @for (int i = 1; i <= itemstock; i++)
                                    {
                                        <div class="sellsitem">
                                            <a href="/Item/Index/2113">
                                                <img href="/Item/Index/2113" src="~/img/蘋果圖.jpg" class="cardImg" alt="..." />
                                            </a>
                                            <div class="px-1 d-flex flex-column justify-content-between">
                                                <div class="cardTitle">好大一根香蕉</div>
                                                <div class="cardPrice">$999</div>
                                                <div class="cardInfo d-flex justify-content-between align-items-end">
                                                    <div class="d-flex justify-content-start flex-column mt-1">
                                                        <div class="d-flex justify-content-start">
                                                            <div class="starImg">
                                                                <img src="/img/YellowStar.png" alt="" class="me-1 w-100 d-block" />
                                                            </div>
                                                            <div class="text-black">4.5</div>
                                                        </div>
                                                        <div class="text-black-50">銷售<span>100</span></div>
                                                    </div>
                                                    <div>
                                                        <button type="button" class="btn btn-outline-warning buybtn">加入購物車</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        <div class="split"></div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-outline-warning" id="moreitembtn">展開更多</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    @section Scripts{
        <script src="~/js/src/carousel.js"></script>
        <script src="~/js/ItemIndex.js"></script>
        <script src="~/js/Homepage/Index.js"></script>
    }
</body>