@model IEnumerable<prjiSpanFinal.Models.CBigType>

@{
    ViewData["Title"] = "Home Page";
}
@section Styles{
    <link href="~/css/HomeStyle.css" rel="stylesheet" />
}
<body>

    <div class="HomepageIndex">
        <section class="rounded-3">
            <div class="row">
                <div class="col-2 view  rounded-start">
                    <div class="list-group">
                        @foreach (var item in Model)
                            @Html.ActionLink(@item.BigTypeName, "Index", "Category", new { id = item.BigTypeID }, new { @class = "list-group-item list-group-item-action" })
                    </div>
                </div>
                <div class="col-1"></div>
                <!--Carouset-->
                <div class="col-9 view rounded-end border-2 border-danger">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-interval="2000" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/Homepage/Index.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/Homepage/Index.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/Homepage/Index.jpg" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
            <!--/Carouset-->
        </section>
    </div>
    <div class="clearfix visible-xs"> </div>
    <div class="split">
    </div>
    <section>
        <div>
            <div class="row" style="background-color:lawngreen">
                <div class="text-center">
                    猜你喜歡...
                    <div class="clearfix visible-xs">
                        <div class="col-2 guessLike" style="background-color:yellow">1</div>
                        <div class="col-2 guessLike" style="background-color:blue">2</div>
                        <div class="col-2 guessLike" style="background-color:red">3</div>
                        <div class="col-2 guessLike" style="background-color:black">4</div>
                        <div class="col-2 guessLike" style="background-color:orange">5</div>
                        <div class="col-2 guessLike" style="background-color:purple">6</div>
                        <div class="col-2 guessLike" style="background-color:purple">7</div>
                        <div class="col-2 guessLike" style="background-color:purple">8</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @section Scripts{
        <script src="~/js/src/carousel.js"></script>
    }
</body>