@addTagHelper *, prjiSpanFinal
@{
    ViewData["Title"] = "Order";
}
@section Styles
{
    <link href="~/css/SellerUI/sidebar.css" rel="stylesheet" />
    <style>
        td {
            text-align: center;
            font-size: 20px;
            vertical-align: middle;
        }
    </style>
}
<vc:seller-ui></vc:seller-ui>
<div class="row ">
    <div class="col-1"></div>
    <div class="col-11 ">
        <h2 class="d-flex justify-content-center">我的銷售</h2>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">總覽</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">未結帳</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">已結帳</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">歷史訂單</a>
            </li>
        </ul>
        <table class="table table-hover">
            <tr>
                <td>訂單編號</td>
                <td>結帳時間</td>
                <td>商品名稱</td>
                <td>數量</td>
                <td>單價</td>
                <td>運費</td>
                <td>總金額</td>
                <td>付款方式</td>
                <td>訂單管理</td>
                <td>評價</td>
            </tr>
            @for (int i = 1; i <= 10; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>2022/10/10<br />10:10:10</td>
                    <td>蘋果</td>
                    <td>100</td>
                    <td>10</td>
                    <td>10</td>
                    <td>1000</td>
                    <td>面交</td>
                    <td><a href="#">訂單管理</a></td>
                    <td><a href="#">給評價</a></td>
                </tr>
            }
        </table>
        <div class="row ">
            <div class="col-4"></div>
            <div class="col-8">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/sidebars.js"></script>
}