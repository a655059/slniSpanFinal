        function ConfirmUnSub(type) {
            Swal.fire({
                icon: 'warning',
                title: '取消推送',
                text: '即將取消選取的推送項目',
                showDenyButton: true,
                confirmButtonText: '確認',
                denyButtonText: `取消`,
            }).then((result) => {
                if (result.isConfirmed) {
                    if (type == 1) {
                        $.post("UnSubAction", { id: CheckID }, function (data) {
                            ReturnUnSubData(data);
                        })
                    }
                    else if (type == 2) {
                        $.post("UnSubAction", { ids: CheckListItemNum },function (data) {
                            ReturnUnSubData(data);
                        })
                    }
                }
            })
        }
