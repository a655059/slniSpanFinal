@addTagHelper *, prjiSpanFinal
@{
    ViewData["Title"] = "NewIndex";
}
@section Styles
{
    <link href="~/css/SellerUI/sidebar.css" rel="stylesheet" />
    <style>

        .排版 {
            margin-left: 250px;
            padding-block: 2px;
            width: 500px;
        }

        .圖片 {
            width: 50%;
            height: 50%;
        }

        .商品邊界 {
            margin-left: 300px;
        }

        .商品名稱樣式 {
            text-align: center;
            font-size: 20px;
        }

        .查詢欄位 {
            width: 200px;
            border-radius: 5px;
        }

        .關鍵字 {
            font-size: 18px;
            font-weight: 600;
        }

        .置中 {
            height: 60px;
        }

        .樣式置中 {
            height: 60px;
            width: 60px;
        }

        .內容文字大小 {
            font-size: 20px;
            font-weight: 600;
        }
    </style>
}

<div class="row">
    <div class="col-2"><vc:seller-ui></vc:seller-ui></div>
    <div class="col-10 ">
        <h2 class="d-flex justify-content-center">我的商品</h2>
        <div class="d-flex justify-content-center mb-1">
            @using (Html.BeginForm())
            {
                <span class="關鍵字">請輸入關鍵字</span> @Html.TextBox("txtKeyword", "", new { @class = "查詢欄位" }) <input type="submit" value="查詢" class="btn btn-warning" />
            }
        </div>
        <div>
            <div class="row">
                <div class="row col-1 align-content-center justify-content-center 內容文字大小">
                    編號
                </div>
                <div class="row col-2 align-content-center justify-content-center 內容文字大小">
                    商品名稱
                </div>
                <div class="row col-1 align-content-center justify-content-center 內容文字大小">
                    規格
                </div>
                <div class="row col-2 align-content-center justify-content-center 內容文字大小">
                    商品數量
                </div>
                <div class="row col-2 align-content-center justify-content-center 內容文字大小">
                    銷售金額
                </div>
                <div class="row col-2 align-content-center justify-content-center 內容文字大小">
                    商品照片
                </div>
                <div class=" row align-content-center col-1 justify-content-center mx-2"></div>
                <div class=" row align-content-center col-1 justify-content-center mx-2"></div>
            </div>
            @{
                int count = 0;
                for (var i = 1; i <= 10; i++)
                {
                    count++;

                    <div class="border rounded-2 my-2 row shadow-sm mb-3 bg-body rounded">
                        <div class="row col-1 align-content-center justify-content-center 內容文字大小">@i</div>
                        <div class="row col-2 align-content-center justify-content-center 內容文字大小">蘋果</div>
                        <div class="row col-1 align-content-center justify-content-center">
                            <div class="row align-content-center justify-content-center 置中">紅色</div> <br />
                            <div class="row align-content-center justify-content-center 置中">藍色</div>
                        </div>
                        <div class="row col-2 align-content-center justify-content-center">
                            <div class="row align-content-center justify-content-center 置中 內容文字大小">200</div><br />
                            <div class="row align-content-center justify-content-center 置中 內容文字大小">500</div>
                        </div>
                        <div class="row col-2 align-content-center justify-content-center">
                            <div class="row align-content-center justify-content-center 置中 內容文字大小">5000</div><br />
                            <div class="row align-content-center justify-content-center 置中 內容文字大小">1000</div>
                        </div>
                        <div class="row col-2 align-content-center justify-content-center">
                            <div><img src="~/img/蘋果圖.jpg" class="w-50 mx-4" alt="蘋果"></div><br />
                            <div><img src="~/img/蘋果圖.jpg" class="w-50 mx-4" alt="蘋果"></div>
                        </div>
                        <div class=" row align-content-center col-1 justify-content-center mx-2">
                            @Html.ActionLink("編輯", "Edit", new { @*id = item.FId*@}, new { @class = "btn btn-primary " })
                        </div>
                        <div class=" row align-content-center col-1 justify-content-center mx-2">
                            @Html.ActionLink("刪除", "Delete", "Product", new { @*id = item.FId*@},
new { onclick = "return confirm('確定要刪除嗎?')", @class = "btn btn-danger " })
                        </div>
                    </div>

                }
            }
        </div>
    </div>
</div>



<div class="row ">
    <div class="col-6"></div>
    <div class="col-6">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
@section Scripts
{
}
