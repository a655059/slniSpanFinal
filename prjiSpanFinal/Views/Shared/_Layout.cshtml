<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>蝦到爆商城</title>


    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <!--Layout自用CSS-->
    <link href="~/css/Layout/LayoutUse.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- HEADER -->
    <header class="p-2 layoutheader1bg text-white keeppos" id="header1">
        <!-- TOP HEADER -->
        <div class="container-lg">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                @*<a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                    </a>*@

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="@Url.Content("~/Home/Index")" class="nav-link text-white px-2 navhead">首頁</a></li>
                    <li><a href="@Url.Content("~/Seller/Index")" class="nav-link px-2 text-white navbody">賣家中心</a></li>
                    <li><a href="@Url.Content("~/Member/List")" class="nav-link px-2 text-white navbody">買家中心</a></li>
                    @*<li><a href="#" class="nav-link px-2 text-white navbody">FAQs</a></li>
                    <li><a href="#" class="nav-link px-2 text-white navbody">About</a></li>*@
                </ul>

                @*<form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                        <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
                    </form>*@
            <div class="header-cart">
                <!-- Menu Toogle -->
                <div>
                    <a href="#" class="linknoline">
                        <i class="fa-solid fa-bell"></i>
                        <div class="qty">2</div>
                    </a>
                </div>
                <!-- /Menu Toogle -->
                <!-- Wishlist -->
                <div>
                    <a href="@Url.Content("~/Member/Like")" class="linknoline">
                        <i class="fa fa-heart-o"></i>
                        <div class="qty">2</div>
                    </a>
                </div>
                <!-- /Wishlist -->
                <!--帳號登入/創建-->
            </div>
                <div class="text-end navlog">
                    <a class="log me-2 linknoline" href="@Url.Content("~/Member/Login")">
                        登入
                    </a>
                    <a class="res me-2 linknoline" href="@Url.Content("~/Member/Create")" >
                        註冊
                    </a>
                </div>
            </div>
            <!--/帳號登入/創建-->
        </div>
        <!-- /TOP HEADER -->
    </header>

    <header class="keeppos2" id="header2">
        <!-- MAIN HEADER -->
        <div class="layoutheader2">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="@Url.Content("~/Home/Index")" class="logo">
                                <img src="~/img/Layout/LOGO_Long2.png" class="logopic" />
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->

                    <!-- SEARCH BAR -->
                    <div class="col-md-7 align-self-center ">
                        <div class="input-group mb-1">
                            <input type="text" class="form-control input-text" placeholder="搜尋好物前先領取折價券..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <button class="btn btn-outline-warning btn-lg" type="button"><i class="fa fa-search"></i></button>
                        </div>
                        @{ int x = 5;
                            <div class="searchkeyspace">
                                @for (int i = 0; i < x; i++)
                                {
                                    <a class="linknoline searchkeyword" href="">搜尋一</a>
                                }
                            </div>
                        }
                    </div>
                    <!-- /SEARCH BAR -->
                    <!-- split -->
                    <div class="col-md-2">
                        <div class="searchcart d-flex justify-content-center align-items-center">
                                <!-- Cart -->
                                <div>
                                    <a href="@Url.Content("~/delivery/showcart")" class="linknoline">
                                        <i class="fa fa-shopping-cart"></i>
                                        <div class="qty">3</div>
                                    </a>
                                </div>
                                <!-- /Cart -->
                        </div>
                    </div>
                            <!-- /split -->
                        </div>
                        <!-- row -->
                    </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
        <!-- /HEADER -->
    </header>

    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- FOOTER -->
    <footer class="footerbg">
        <!-- top footer -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row text-center">
                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">關於我們</h3>
                            <p>蝦到爆是一個讓您安心、快樂、自由享受購物的網路平台。</p>
                            <ul class="lofooter-links">
                                <li><a href="#"><i class="fa fa-map-marker"></i>台北市大安區復興南路一段390號2樓</a></li>
                                <li><a href="#"><i class="fa fa-phone"></i>(+886)2-6631-6588</a></li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i>Shopdaobao@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Categories</h3>
                            <ul class="lofooter-links">
                                <li><a href="#">Hot deals</a></li>
                                <li><a href="#">Laptops</a></li>
                                <li><a href="#">Smartphones</a></li>
                                <li><a href="#">Cameras</a></li>
                                <li><a href="#">Accessories</a></li>
                            </ul>
                        </div>
                    </div>

                    @*<div class="clearfix visible-xs"></div>*@

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Information</h3>
                            <ul class="lofooter-links">
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Contact Us</a></li>
                                <li><a href="#">Privacy Policy</a></li>
                                <li><a href="#">Orders and Returns</a></li>
                                <li><a href="#">Terms & Conditions</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title dropup">Service</h3>
                            <ul class="lofooter-links">
                                <li><a href="#">My Account</a></li>
                                <li><a href="#">View Cart</a></li>
                                <li><a href="#">Wishlist</a></li>
                                <li><a href="#">Track My Order</a></li>
                                <li><a href="#">Help</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /top footer -->
        <!-- bottom footer -->
        <div class="section footerbg2">
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="text-center">
                        <span style="margin-top:0px;" class="copyright">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </span>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /bottom footer -->
        <button type="button" id="BackTop" class="toTop-arrow"></button>
    </footer>
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/nouislider.min.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    @*<script src="~/js/main.js"></script>*@
    <script src="~/js/Layout/layout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
