@model prjiSpanFinal.ViewModels.Item.CItemIndexSellerProductViewModel
<link href="~/css/ProductCard.css" rel="stylesheet"/>
@{ 
    string base64 = Convert.ToBase64String(Model.productPic);
    string imgUrl = $"data:image/gif;base64,{base64}";
}
<div class="productCardLayout">
    <div class="productCardImgDiv">
        <img src="@imgUrl" alt="photo" />
    </div>
    <div>@Model.productName</div>
    <div>@Model.price</div>
    <div>@Model.starCount.ToString("0.0")<span class="mx-2">|</span>@Model.salesVolume</div>
    
</div>
