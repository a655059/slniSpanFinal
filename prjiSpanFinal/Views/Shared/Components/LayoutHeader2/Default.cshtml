<div class="layoutheader2" id="header2">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row justify-content-between">
            <!-- LOGO -->
            <div class="col-md-2 lologo">
                <div class="header-logo">
                    <a href="@Url.Content("~/Home/Index")" class="logo">
                        <img src="~/img/Layout/LOGO_Long2.png" class="logopic" />
                    </a>
                </div>
            </div>
            <!-- /LOGO -->
            <!-- SEARCH BAR -->
            <div class="col-md-7 align-self-center loschbar">
                <div class="input-group mb-1">
                    <input type="text" id="SearchInputTxT" class="form-control input-text" placeholder="搜尋好物前先領取折價券..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <a id="SearchInputbtn" class="btn btn-outline-warning btn-lg" href="#"><i class="fa fa-search"></i></a>
                </div>
                @{ int x = 8;
                    <div class="searchkeyspace">
                        @for (int i = 0; i < x; i++)
                        {
                            <a class="linknoline searchkeyword" href="@Url.Content("~/Category/SearchResult")">水果</a>
                        }
                    </div>
                }
            </div>
            <!-- /SEARCH BAR -->
            <!-- Searchcart -->
            <div class="col-md-2">
                <div class="searchcart d-flex flex-row justify-content-center align-items-center">
                    <!-- Wishlist -->
                    <div class="searchcart-Heart">
                        <a href="@Url.Content("~/Member/Like")" class="linknoline">
                            <i class="fa fa-heart"></i>
                            <div class="qty">2</div>
                        </a>
                    </div>
                    <!-- /Wishlist -->
                    <!-- Cart -->
                    <div class="searchcart-Cart">
                        <a href="@Url.Content("~/delivery/showcart")" class="linknoline">
                            <i class="fa fa-shopping-cart"></i>
                            <div class="qty">3</div>
                        </a>
                    </div>
                    <!-- /Cart -->
                </div>
            </div>
            <!-- /Searchcart -->
        </div>
        <!-- row -->
    </div>
    <!-- container -->
</div>
@section Script{
    <script>
    let searchInput = document.querySelector("#SearchInputTxT");
    let searchBtn = document.querySelector("#SearchInputbtn");

        searchInput.addEventListener("change", event => {

    let searchkeyword = document.querySelector("#SearchInputTxT").value;
    @*let url = `@Url.Content("~/Category/SearchResult/?keyword="+ searchkeyword + ")"`;
                searchBtn.setAttribute("href", url);*@
            })
    </script>
}