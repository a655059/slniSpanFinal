@model prjiSpanFinal.ViewModels.Home.CShowItem
@{ 
    string productLink = Url.Content("~/Item/Index") + "?id=" + Model.Product.ProductId;
}
<div class="sellsitem">
    <a class="linknoline" href="@productLink">
        @if (Model.Pic != null)
        {
            var base64Image = Convert.ToBase64String(Model.Pic);
            var source = String.Format("data:image/png;base64,{0}", base64Image);
            <img src="@source" class="cardImg" alt="..." />
        }
        else
        {
            <img src="#" class="cardImg" alt="此商品沒有圖片" />
        }
    </a>
    <div class="px-1 d-flex flex-column justify-content-between">
        <div class="cardTitle">@Model.Product.ProductName</div>        
        @{ if (Model.Price.Count == 1)
            {
                <div class="cardPrice">$@decimal.Round(Model.Price[0])</div>
            }
            else
            {
                <div class="cardPrice">$@decimal.Round(Model.Price[0]) - $@decimal.Round(Model.Price[1])</div>
            }
        }
        <div class="cardInfo d-flex justify-content-between align-items-end">
            <div class="d-flex justify-content-start flex-column mt-1">
                <div class="d-flex justify-content-start">
                    <div class="starImg">
                        <img src="/img/YellowStar.png" alt="" class="me-1 d-block" />
                    </div>
                    <div class="text-black">@Model.starCount.ToString("0.0")</div>
                </div>
                <div class="text-black-50">銷售<span>@Model.salesVolume</span></div>
            </div>
            <div>
                <button type="button" class="btn btn-outline-warning buybtn">加入購物車</button>
            </div>
        </div>
    </div>
</div>