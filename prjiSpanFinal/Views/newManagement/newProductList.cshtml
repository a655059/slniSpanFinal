@model prjiSpanFinal.ViewModel.CProductListViewModel

@{
    ViewData["Title"] = "newProductList";
}

<h1>newProductList</h1>

<form asp-action="newProductList" asp-controller="newManagement" method="post">
<table class="table" width="100% "style=" table-layout:fixed">
    <thead>
        <tr>
            <th>
                商品ID
            </th>
            <th>
                商品名稱
            </th>
            <th>
                商品類型
            </th>
            <th>
                商品狀態
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    <input value="@item.ProductId" readonly>
                </td>
                <td>
                    <input value="@item.ProductName" readonly>
                </td>
                <td>
                    <input value="@item.SmallTypeId" readonly>
                </td>

                <td>
                    <input value="@item.ProductStatusId" readonly>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ProductId}) |
                    @Html.ActionLink("Details", "Details", new { id=item.ProductId}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ProductId})
                </td>
            </tr>
        }
    </tbody>
</table>


<ul class="pagination">
    @for(int i=1;i<=Model.PageCount;i++)
    {
        <li class="page-item">
            @if(i!=Model.CurrentPageIndex){
                    <a class="page-link" href="javascript:PageClick(@i)">@i</a>
            }
            else{
                <a class="page-link">@i</a>
            }
        </li>
    }
</ul>

<input type="hidden" id="hfcurrentpageindex" name="CurrentPageIndex" />


</form>
<script type="text/javascript">

    function PageClick(index)
    {
        document.getElementById("hfcurrentpageindex").value=index;
        document.forms[0].submit();
    }
</script>