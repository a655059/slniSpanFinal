@model prjiSpanFinal.ViewModels.newManagement.CCreateEventViewModel

@{
    ViewData["Title"] = "EventEdit";
}

<h1>修改活動</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EventEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="OfficialEventListId" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="EventName" class="control-label">活動名稱</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">開始日期</label>
                <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JoinStartDate" class="control-label">開始參加日期</label>
                <input type="date" name="JoinStartDate" value="@Model.JoinStartDate.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="JoinStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JoinEndDate" class="control-label">截止參加日期</label>
                <input type="date" name="JoinEndDate" value="@Model.JoinEndDate.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="JoinEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger mt-1" asp-action="EventList">取消</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
