@model prjiSpanFinal.Models.BigType

@{
    ViewData["Title"] = "BigTypeCreate";
}

<h1>新增大類別</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <button id="demo" class="btn btn-success" >demo</button>
        <form asp-action="BigTypeCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="BigTypeId" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="BigTypeName" class="control-label">大類別名稱</label>
                <input asp-for="BigTypeName" class="form-control" id="BigTypeName" />
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="確認" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BigTypeList" class="btn btn-danger mt-1">取消</a>
</div>

@section Scripts {
    <script>
    let demo=document.getElementById("demo");
    demo.addEventListener("click",function(){
        let BigTypeName=document.getElementById("BigTypeName");
        BigTypeName.value="消耗性物品"
    })
    </script>
}
