@model prjiSpanFinal.Models.SmallType

@{
    ViewData["Title"] = "SmallTypeCreate";
}

<h1>新增小分類</h1>

<h4>@ViewBag.BigType.BigTypeName 的小分類</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SmallTypeCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SmallTypeId" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="SmallTypeName" class="control-label">類別名稱</label>
                <input asp-for="SmallTypeName" class="form-control" />
                <span asp-validation-for="SmallTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="BigTypeId" class="form-control" type="hidden" value="ViewBag.BigType.BigTypeId" />
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="確認" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("取消","SmallTypeList","newManagement",new{id=ViewBag.BigType.BigTypeId},new{@class="btn btn-danger mt-1"})
</div>

@section Scripts {
    <script>
        let inputs = $(".form-control");
        let submit = document.getElementById('submit');
        submit.addEventListener("click", function (event) {
            for (let inp of inputs) {
                if (!(inp.value)) {
                    event.preventDefault();
                    alert("請完整填入內容!");
                    break;
                }
            }
        });
    </script>
}
