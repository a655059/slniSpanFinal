@model prjiSpanFinal.Models.Shipper

@{
    ViewData["Title"] = "ShipperCreate";
}

<h1>新增運送方式</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <button id="demo" class="btn btn-success">demo</button>
        <form asp-action="ShipperCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ShipperId" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="ShipperName" class="control-label">運送方式</label>
                <input asp-for="ShipperName" class="form-control" id="ShipperName" />
                <span asp-validation-for="ShipperName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">聯絡電話</label>
                <input asp-for="Phone" class="form-control" id="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label">運費</label>
                <input asp-for="Fee" class="form-control" id="Fee" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="確認" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShipperList" class="btn btn-danger mt-1">取消</a>
</div>

@section Scripts {
    <script>
        let demo = document.getElementById("demo");
        demo.addEventListener("click",function(){
            let Fee=document.getElementById("Fee");
            let Phone = document.getElementById("Phone");
            let ShipperName = document.getElementById("ShipperName");
            Fee.value="280";
            Phone.value="0969514441";
            ShipperName.value="送子鳥物流"
        })
    </script>
}
