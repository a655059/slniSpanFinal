@model prjiSpanFinal.Models.Coupon

@{
    ViewData["Title"] = "CouponCreate";
}

<h1>建立非活動用優惠券</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CouponCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="CouponId" type="hidden" />
            </div>
            <div class="form-group">
                優惠券名稱<input asp-for="CouponName" class="form-control" />
                <span asp-validation-for="CouponName" class="text-danger"></span>
            </div>
            <div class="form-group">
                開始日期<input asp-for="StartDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                失效日期<input asp-for="ExpiredDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ExpiredDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                折扣<input asp-for="Discount" id="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger fs-6">ex:若為8折優惠券則填入0.8</span>
            </div>
            <div class="form-group">
                優惠券代碼<input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="MemberId" class="form-control plaintext" value="1" type="hidden" />
            </div>
            <div class="form-group">
                可以領取日期<input asp-for="ReceiveStartDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ReceiveStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                結束領取日期 <input asp-for="ReceiveEndDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ReceiveEndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                是否為免運券
                <input id="IsFreeDelivery" class="form-check-input" asp-for="IsFreeDelivery" />
            </div>
            <div class="form-group">
                最低消費金額 <input asp-for="MinimumOrder" class="form-control" />
                <span asp-validation-for="MinimumOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="OfficialEventListId" value="1" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="確認" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CouponList" class="btn btn-danger">取消並回到優惠券列表</a>
</div>
@section Scripts{
    <script>
        var IsFreeDelivery = document.getElementById("IsFreeDelivery");
        var confirms = document.getElementById("confirms");
        var Discount = $("#Discount");
        var Discounts = document.getElementById("Discount");
        var Inputs = document.querySelectorAll(".form-control");
        IsFreeDelivery.addEventListener("change", function () {
            if (IsFreeDelivery.checked == true) {
                Discount.prop('readonly', true);
                Discounts.value = 1;
            }
            else {
                Discounts.value = "";
                Discount.prop('readonly', false);
            }
        });
        Discounts.addEventListener("blur", function (event) {
            console.log(Number(Discounts.value));
            if (isNaN(Number(Discounts.value)) || Number(Discounts.value) > 1) {
                alert("折扣欄位請輸入小於或等於1的小數!");
                return;
            }
        });
        confirms.addEventListener("click", function (event) {
            for (var l of Inputs) {
                if (!(l.value)) {
                    event.preventDefault();
                    alert("每個欄位皆是必填");
                    break;
                }
            }
        }
        );
    </script>
}