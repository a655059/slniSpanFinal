<table class="table" width="120%" style="table-layout:fixed">
    <thead>
        <tr>
            <th>
                儲值金
            </th>
            <th >
                備用信箱
            </th>
            <th >
                暱稱
            </th>
            <th >
                自我介紹
            </th>
            <th >
                海外or國內
            </th>
            <th >
                生日
            </th>
            <th ></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    <input class="form-control-plaintext" value="@Model.Balance" readonly>
                </td>
                <td>
                    <input class="form-control-plaintext" value="@Model.BackUpEmail" readonly>
                </td>
                <td>
                    <input class="form-control-plaintext" value="@Model.NickName" readonly>
                </td>
                <td >
                <input class="form-control-plaintext" value="@Model.Description" readonly>
                </td>
                <td>
                    @{
                        string IsTWs = "海外";
                    if ((bool)Model.IsTw)
                        {
                            IsTWs = "國內";
                        }
                    }
                    <input class="form-control-plaintext" value="@IsTWs" readonly>
                </td>
                <td>
                <input class="form-control-plaintext" value="@Model.Birthday.ToString("yyyy/MM/dd")" readonly>
                </td>
                <td >
                    @Html.ActionLink("回到會員列表", "MemberList","newManagement",null,new{@class="btn btn-primary"})
                </td>
            </tr>
    </tbody>
</table>
