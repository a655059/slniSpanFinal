                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Argument.ArgumentId)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Argument.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ArgumentTypeName)
