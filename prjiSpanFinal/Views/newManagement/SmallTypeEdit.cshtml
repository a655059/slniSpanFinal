@model prjiSpanFinal.Models.SmallType

@{
    ViewData["Title"] = "SmallTypeEdit";
}

<h1>編輯小分類</h1>

<h4>@ViewBag.BigTypeName 的小分類</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SmallTypeEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SmallTypeId"  value="@Model.SmallTypeId" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="SmallTypeName" class="control-label">分類名稱</label>
                <input asp-for="SmallTypeName" class="form-control" />
                <span asp-validation-for="SmallTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="BigTypeId" class="form-control" value="@Model.BigTypeId" type="hidden"/>
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="確認" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("取消","SmallTypeList","newManagement",new{id=Model.BigTypeId},new{@class="btn btn-danger mt-1"})
</div>

@section Scripts {
<script>
        let inputs = $(".form-control");
        let submit = document.getElementById('submit');
        submit.addEventListener("click", function (event) {
            for (let inp of inputs) {
                if (!(inp.value)) {
                    event.preventDefault();
                    alert("請完整填入內容!");
                    break;
                }
            }
        });
</script>
}
