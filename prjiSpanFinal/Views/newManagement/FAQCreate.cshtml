@model prjiSpanFinal.Models.Faq

@{
    ViewData["Title"] = "FAQCreate";
}

<h1>新增常見問題</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FAQCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Faqid" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="FaqtypeId" class="control-label">問題類型</label>
                <select asp-for="FaqtypeId" class="form-select-lg">
                    @{
                        foreach (var i in ViewBag.FAQTypes)
                        {
                            <option value="@i.FaqtypeId">@i.FaqtypeName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Question" class="control-label">問題</label>
                <textarea name="Question" class="form-control"></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer" class="control-label">答案</label>
                <textarea name="Answer" class="form-control"></textarea>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="確認" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="FAQList" class="btn btn-danger mt-1">取消</a>
</div>

@section Scripts {
    <script>
    let inputs = $(".form-control");
    let submit = document.getElementById('submit');
    submit.addEventListener("click", function (event) {
        for (let inp of inputs) {
            if (!(inp.value)) {
                event.preventDefault();
                alert("請完整填入內容!");
                break;
            }
        }
    })
    </script>
}
