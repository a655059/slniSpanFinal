@model List<COrderDetailViewModel>
@using prjiSpanFinal.Controllers
@using prjiSpanFinal.ViewModels.newManagement
@{
    ViewData["Title"] = "OrderDetailList";
}

<h1>訂單詳情</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                訂單ID
            </th>
            <th>
                商品品名
            </th>
            <th>
                品項
            </th>
            <th>
                數量
            </th>
            <th>
                貨品收貨日期
            </th>
            <th>
                物流狀態
            </th>
            <th>
                單價
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
        
            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDetail.OrderDetailId)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.OrderDetail.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.ProductDetailName)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.OrderDetail.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingStatusName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDetail.Unitprice)
                    </td>
                    <td>
                            @Html.ActionLink("回到訂單列表", "OrderList","newManagement", null,new{@class="btn btn-primary"})
                    </td>
                </tr>
}}
    </tbody>
</table>
