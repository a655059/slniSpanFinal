@model prjiSpanFinal.Models.Shipper

@{
    ViewData["Title"] = "ShipperEdit";
}

<h1>修改運送方式</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShipperEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ShipperId" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="ShipperName" class="control-label">運送方式</label>
                <input asp-for="ShipperName" class="form-control" />
                <span asp-validation-for="ShipperName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">電話</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label">運費</label>
                <input asp-for="Fee" class="form-control" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="確認" class="btn btn-primary mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShipperList" class="btn btn-danger mt-1">取消</a>
</div>

@section Scripts {
<script>
       let submit=document.getElementById("submit");
        submit.addEventListener("click",function(){
             let inputs = document.querySelectorAll(".form-control");
            for(let i of inputs){
                let v=i.value
                console.log(`  |${v}|  `)
                if(!(i.value)){
                    event.preventDefault();
                    alert("請完整填入內容!");
                    break;
                }
            }
        })
           
</script>
}
