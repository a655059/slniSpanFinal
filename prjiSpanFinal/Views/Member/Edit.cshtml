@addTagHelper *, prjiSpanFinal
@model MemberAccViewModel
@using prjiSpanFinal.ViewModels.Member
@using prjiSpanFinal.ViewModels
@using Microsoft.AspNetCore.Http
@using System.Text.Json
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "Edit";
}
@section Styles
{
    <link href="~/css/MemberUI/sidebar.css" rel="stylesheet" />
    <style>
        .form-control {
            display: block;
            width: 50%;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }

        fieldset {
            width: 550px;
            border: 3px #4F9D9D;
            border-radius: 20px;
            margin: 15px;
        }

        legend {
            margin-left: 30px;
        }

        .st1 {
            border-bottom: 3px #D1E9E9;
            margin: 20px;
            padding-bottom: 7px;
        }

        .hh {
            border-bottom: 1px solid #111010;
            margin: 20px;
            padding-bottom: 7px;
            opacity: 0.5;
            background-color: white;
            color: #111010
        }

        .st2 {
            margin: 20px;
            text-align: center;
        }

        .p1 {
            width: 100px;
            text-align: right;
            float: left;
            padding-right: 10px;
        }

        textarea {
            resize: none;
        }
    </style>
}
<vc:member-ui></vc:member-ui>
<h2 class="d-flex justify-content-center">個人資料修改</h2>


<div class="row " id="viewPage">
    <div class="col-1"></div>
    <div class="col-11 ">
        <form action="#" method="post" enctype="multipart/form-data">
            <div style="background-color:white">
                <div class="container text-center">
                    <div class="row align-items-start">
                        <div class="col">
                            <fieldset>
                                <legend>基本資料</legend>
                                <div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="st1">
                                        <label asp-for="MemberId" class="p1">會員編號</label>
                                        <input asp-for="MemberId" class="form-control" type="text" id="" name="MemberId" />
                                    </div>
                                    <div class="st1">
                                        <label asp-for="Name" class="p1">姓名</label>
                                        <input asp-for="Name" class="form-control" type="text" id="acount" name="Name" autofocus placeholder="名字" size="40" autocomplete="off" />
                                    </div>
                                    <div class="st1">
                                        <label asp-for="Birthday" class="p1">生日</label>
                                        <input asp-for="Birthday" type="date" name="Birthday" class="form-control" />
                                    </div>
                                    <div class="st1">
                                        <label class="p1">性別</label>
                                        <div class="container text-center">
                                            <div class="row align-items-start">
                                                <label class="col">
                                                    <input asp-for="Gender" type="radio" name="gender" value="male" />男生
                                                </label>
                                                <label class="col">
                                                    <input asp-for="Gender" type="radio" name="gender" value="female" />女生
                                                </label>
                                                <label class="col">
                                                    <input asp-for="Gender" type="radio" name="gender" value="other" />其他
                                                </label>
                                                <label class="col"></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <legend>聯繫方式</legend>
                                <div class="st1">
                                    <label asp-for="Phone" class="p1">手機</label>
                                    <input asp-for="Phone" class="form-control" type="text" name="Phone" size="40" />
                                </div>
                                <div class="st1">
                                    <label asp-for="Email" class="p1">信箱</label>
                                    <input asp-for="Email" class="form-control" type="text" name="Email" size="40" />
                                </div>
                                <div class="st1">
                                    <label asp-for="BackUpEmail" class="p1">備用信箱</label>
                                    <input asp-for="BackUpEmail" class="form-control" type="text" name="BackUpEmail" size="40" />
                                </div>
                                <div class="st1">
                                    <label class="p1">國籍</label>
                                    <div class="container text-center">
                                        <div class="row align-items-start">
                                            <label class="col">
                                                <input asp-for="IsTw" type="radio" name="TW" value="tw" />台灣
                                            </label>
                                            <label class="col">
                                                <input asp-for="IsTw" type="radio" name="TW" value="foreign" />外國
                                            </label>
                                            <label class="col"></label>
                                            <label class="col"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="st1">
                                    <label class="p1">居住地</label>
                                    <select name="City" size="1" class="form-select form-select-sm" style="width:200px;">
                                    </select>
                                </div>
                                <div class="st1">
                                    <label asp-for="Address" class="p1">完整地址</label>
                                    <input asp-for="Address" class="form-control" type="text" name="Address" size="40" />
                                </div>
                            </fieldset>
                        </div>
                        <div class="col">
                            <img src="@Url.Action("showPhoto","Member", new {id= Model.MemberId })" class="img-thumbnail w-25" />                            <br /><br />
                            <label class="p1" for="formFile">上傳照片</label>
                            <input class="form-control" type="file" name="file1" multiple />
                        </div>
                    </div>
                </div>




                <div class="justify-content-around">
                    <div class="st2 justify-content-around">
                        @Html.ActionLink("送出", "Edit", "Member", "", new { @class = "btn btn-primary" })
                        <button class="btn btn-secondary" id="clear">清除</button>
                    </div>
                </div>

            </div>
        </form>


        @*<div class="row display-2">@Model.MemberId</div>*@
    </div>
</div>

@section Scripts{
    <script>
        const clear = document.querySelector("#clear");

        clear.addEventListener("click", eve => {
            eve.preventDefault();
            clearData();
        })
        function clearData() {
            $('input').val("")
            $('textarea').val("")
        }
    </script>
}

