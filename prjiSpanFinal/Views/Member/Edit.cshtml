<html lang="en">

<head>
    <meta charset="utf-8" />

    <style>
        .form-control {
            display: block;
            width: 50%;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }
        fieldset {
            width: 550px;
            border: 3px #4F9D9D;
            border-radius: 20px;
            margin: 15px;
        }

        legend {
            color: #DAB1D5;
            margin-left: 30px;
        }

        .st1 {
            width: 500px;
            border-bottom: 3px #D1E9E9;
            margin: 20px;
            padding-bottom: 7px;
        }

        .hh {
            border-bottom: 1px solid #6C6C6C;
            margin: 20px;
            padding-bottom: 7px;
            opacity: 0.5;
            background-color: white;
        }

        .st2 {
            margin: 20px;
            text-align: center;
        }

        .p1 {
            width: 100px;
            text-align: right;
            float: left;
            padding-right:10px;
        }

        textarea {
            resize: none;
        }
    </style>
</head>
<body>
    <form action="#" method="get" enctype="multipart/form-data">
        <div style="background-color:white">
            <h1 class="hh">會員資料修改</h1>
            <div class="d-flex">
                <div class="col-6">
                    <fieldset class="d-flex flex-column">
                        <legend>基本資料</legend>
                        <div>
                            <div class="st1">
                                <label for="acount" class="p1">姓名</label>
                                <input class="form-control" type="text" id="acount" name="account" autofocus placeholder="名字" size="40" autocomplete="off" />
                            </div>
                            <div class="st1">
                                <label class="p1">國籍</label>
                                <label>
                                    <input type="radio" name="contury" value="tw" />台灣
                                </label>
                                <label>
                                    <input type="radio" name="contury" value="foreign" />外國
                                </label>
                            </div>
                            <div class="st1">
                                <label for="pas" class="p1">密碼</label>
                                <input class="form-control" type="password" id="pas" name="pwd" maxlength="6" />
                            </div>
                            <div class="st1">
                                <label class="p1">性別</label>
                                <label>
                                    <input type="radio" name="gender" value="male" />男生
                                </label>
                                <label>
                                    <input type="radio" name="gender" value="female" />女生
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-6">
                    <img src="~/img/Homepage/Index.jpg" style="width:300px;height:300px" alt="無法顯示" class="img-thumbnail" />
                </div>
            </div>
            <div class="d-flex">
                <div class="col-6">
                    <fieldset>
                        <legend>聯繫方式</legend>
                        <div class="st1">
                            <label class="p1">手機</label>
                            <input class="form-control" type="text" name="phone" size="40" />
                        </div>
                        <div class="st1">
                            <label class="p1">信箱</label>
                            <input class="form-control" type="text" name="email" size="40" />
                        </div>
                        <div class="st1">
                            <label class="p1">備用信箱</label>
                            <input class="form-control" type="text" name="backupemail" size="40" />
                        </div>
                        <div class="st1">
                            <label class="p1">居住地</label>
                            <select name="City" size="1">
                                <option value="TPE">台北市</option>
                                <option value="TPH">新北市</option>
                                <option value="TYU">桃園市</option>
                                <option value="HSC">新竹市</option>
                            </select>
                        </div>
                        <div class="st1">
                            <label class="p1">完整地址</label>
                            <input class="form-control" type="text" name="add2" size="40" />
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>更多關於我</legend>
                        <div class="st1">
                            <label class="p1" for="formFile">上傳照片</label>
                            <label>
                                <input class="form-control" type="file" name="file1" multiple />
                            </label>
                        </div>
                        <div class="st1">
                            <label class="p1">生日</label>
                            <label>
                                <input type="date" name="birthday" />
                            </label>
                        </div>
                        <div class="st1">
                            <label class="p1" for="com">自傳</label>
                            <textarea class="form-control" cols="40" rows="5" id="com" name="memo"></textarea><br />
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="justify-content-around">
                <div class="st2 justify-content-around">
                    @Html.ActionLink("送出", "List", "Member", null, new { @class = "btn btn-secondary" })
                    <button class="btn btn-secondary" id="clear">清除</button>

                </div>
            </div>
        </div>
    </form>
</body>
</html>
@section Scripts{ 
<script>
    const clear = document.querySelector("#clear");
    clear.addEventListener("click", eve => {
        eve.preventDefault();
        clearData();
    })
    function clearData() {
        $('input').val("")
        $('textarea').val("")
    }
</script>
}