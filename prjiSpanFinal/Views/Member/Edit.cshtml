<html lang="en">

<head>
    <meta charset="utf-8" />

    <style>
        fieldset {
            width: 550px;
            border: 3px #4F9D9D;
            border-radius: 20px;
            margin: 15px;
        }

        legend {
            color: #DAB1D5;
            margin-left: 30px;
        }

        .st1 {
            width: 500px;
            border-bottom: 3px #D1E9E9;
            margin: 20px;
            padding-bottom: 7px;
        }

        .hh {
            border-bottom: 1px solid #6C6C6C;
            margin: 20px;
            padding-bottom: 7px;
            opacity: 0.5;
            background-color: white;
        }

        .st2 {
            margin: 20px;
            text-align: center;
        }

        .p1 {
            width: 100px;
            text-align: right;
            float: left;
            padding-right:10px;
        }

        textarea {
            resize: none;
        }
    </style>
</head>
<body>
    <form action="#" method="get" enctype="multipart/form-data">
        <div style="background-color:white">
            <h1 class="hh">會員資料修改</h1>
            <div class="d-flex">
                <div class="col-6">
                    <fieldset class="d-flex flex-column">
                        <legend>基本資料</legend>
                        <div>
                            <div class="st1">
                                <label for="acount" class="p1">姓名</label>
                                <input class="form-control" type="text" id="acount" name="account" autofocus placeholder="名字" size="40" autocomplete="off" />
                            </div>
                            <div class="st1">
                                <label class="p1">國籍</label>
                                <label>
                                    <input type="radio" name="gender" value="male" />台灣
                                </label>
                                <label>
                                    <input type="radio" name="gender" value="female" />外國
                                </label>
                            </div>
                            <div class="st1">
                                <label for="pas" class="p1">密碼</label>
                                <input type="password" id="pas" name="pwd" maxlength="6" />
                            </div>
                            <div class="st1">
                                <label class="p1">身分證ID</label>
                                <label>
                                    <input type="text" class="form-control" name="ID" maxlength="10" pattern="[a-z,A-Z]{1}[1-2,8-9]{1}\d{8}" required />
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-6">
                    <img src="~/img/Homepage/Index.jpg" with="200" heigh="200" alt="無法顯示" class="img-thumbnail" />
                </div>
            </div>
            <div class="d-flex">
                <div class="col-6">
                    <fieldset>
                        <legend>聯繫方式</legend>
                        <div class="st1">
                            <label class="p1">手機</label>
                            <label>
                                <input type="text" name="phone" size="10" />
                            </label>
                        </div>
                        <div class="st1">
                            <label class="p1">信箱</label>
                            <label>
                                <input type="text" name="email" size="40" />
                            </label>
                        </div>
                        <div class="st1">
                            <label class="p1">備用信箱</label>
                            <label>
                                <input type="text" name="backupemail" size="40" />
                            </label>
                        </div>
                        <div class="st1">
                            <label class="p1">居住地</label>
                            <select name="City" size="1">
                                <option value="TPE">台北市</option>
                                <option value="TPH">新北市</option>
                                <option value="TYU">桃園市</option>
                                <option value="HSC">新竹市</option>
                            </select>
                        </div>
                        <div class="st1">
                            <label class="p1">完整地址</label>
                            <label>
                                <input type="text" name="add2" size="40" />
                            </label>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>更多關於我</legend>
                        <div class="st1">
                            <label class="p1" for="formFile">上傳檔案</label>
                            <label>
                                <input class="form-control" type="file" name="file1" multiple />
                            </label>
                        </div>
                        <div class="st1">
                            <label class="p1">生日</label>
                            <label>
                                <input type="date" name="birthday" />
                            </label>
                        </div>
                        <div class="st1">
                            <label for="com" class="p1">自傳</label><textarea cols="40" rows="5" id="com" name="memo"></textarea><br />
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="justify-content-around">
                <div class="st2 justify-content-around">
                    <input type="submit" value="送出" />
                    <input type="reset" value="清除" />
                </div>
            </div>
        </div>
    </form>
</body>
</html>