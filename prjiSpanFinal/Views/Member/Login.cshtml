

@{
    ViewData["Title"] = "Login";
}

@section Styles
{
    <style>
        .bg-image-vertical {
            position: relative;
            overflow: hidden;
            background-repeat: no-repeat;
            background-position: right center;
            background-size: auto 100%;
        }
    </style>
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <a href="@Url.Content("~/Home/Index")">
                        <img src="~/img/Layout/LOGO_Long2.png" style="background-color: orange;" />
                    </a>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">登入</h3>

                        <div class="form-outline mb-4">
                            <input type="email" id="txtAccount" value="acc1" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">帳號</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="txtPW" value="pw1" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">密碼</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="button" id="btnlogin">登入</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="https://localhost:44330/Member/forgetPw">忘記密碼?</a></p>
                        <p>還沒有帳號嗎? <a href="@Url.Content("~/Member/Create")" class="link-info">按這裡註冊</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/img/Member/randommall.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script>
        let txtAcc = $("#txtAccount");
        let txtPW = $("#txtPW");

        $("#btnlogin").click(function () {
            $.post('@Url.Content("~/Member/LoginCheck")', { "txtAccount": txtAcc.val(), "txtPW": txtPW.val() }, function (data) {
                if (data == "2"){
                    window.alert("管理員登入成功");
                    window.location = "/newManagement/PowerBi";
                }
                else if (data == "1") {
                    window.alert("登入成功");
                    window.location = "/";
                }
                else {
                    window.alert("密碼錯誤");
                }
            })
        });
    </script>
}