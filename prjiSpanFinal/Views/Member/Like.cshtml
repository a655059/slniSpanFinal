@addTagHelper *, prjiSpanFinal
@model IEnumerable<prjiSpanFinal.ViewModels.Member.MylikeViewModel>
@section Styles
{
    <link href="~/css/MemberUI/sidebar.css" rel="stylesheet" />
    <link href="~/css/Home/ItemCard.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Item/ItemIndex.css" />
}
<style>
    /*        .list a:link{text-decoration:none;}
        .list a:visited{color:aquamarine;}
        .list a:hover{text-decoration:underline;color:green;}
        .list a:active{color:red;font-size:30px;}*/

    figcaption {
        color: #FF0000;
        font-size: 40px;
        margin: 0 auto;
    }

    .list > li > a:link {
        text-decoration: none;
        color: darkslategrey;
    }

    .list > li > a:visited {
        color: aquamarine;
    }

    .list > li > a:hover {
        text-decoration: underline;
        color: green;
    }

    .list > li > a:active {
        color: red;
        font-size: 30px;
    }
</style>


<vc:member-ui></vc:member-ui>
<h2 class="d-flex justify-content-center">按讚好物</h2>
<div class="row">
    <div class="col-1"></div>
    <div class="col-11 ">
        <div class="input-group mb-1">
            <input type="text" class="form-control input-text" placeholder="" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <button class="btn btn-outline-warning btn-lg" type="button"><i>搜尋</i></button>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item" id="PDall">
                <a class="nav-link active ordernavtabs" aria-current="page" href="#">所有商品</a>
                <input type="hidden" class="ordershipperstatus" value="0" />
            </li>
            <li class="nav-item" id="PDstage">
                <a class="nav-link ordernavtabs" href="#">狀態</a>
                <input type="hidden" class="ordershipperstatus" value="2" />
            </li>
            <li class="nav-item" id="PDdiscount">
                <a class="nav-link ordernavtabs" href="#">折扣中</a>
                <input type="hidden" class="ordershipperstatus" value="3" />
            </li>
            <li class="nav-item" id="PDclass">
                <a class="nav-link ordernavtabs" href="#">類別</a>
                <input type="hidden" class="ordershipperstatus" value="4" />
            </li>
        </ul>
        <figure style="background-color:#FCFCFC">
            @{
                var count = 0;
                foreach (var pd in Model)
                {
                    count++;
                    <figcaption style="font-size:15px; color: #8E8E8E; "><a>@count</a>件商品</figcaption>
                    <div class="aaa d-flex flex-wrap">
                        @for (int i = 0; i < count; i++)
                        {
                            <div class="sellsitem">
                                <div>
                                    <a href="/Item/Index/2113">
                                        <img src="~/img/product01.png" class="cardImg" />
                                    </a>
                                </div>
                                <div class="px-1 d-flex flex-column justify-content-between">
                                    <div class="cardTitleBox">
                                        <div class="cardTitle">@pd.ProductName</div>
                                    </div>
                                    @{ if (pd.Unitprice.Count == 1)
                                        {
                                            <div class="cardPrice">$@decimal.Round(pd.Unitprice[0])</div>

                                        }
                                        else
                                        {
                                            <div class="cardPrice">$@decimal.Round(pd.Unitprice[0])-$@decimal.Round(pd.Unitprice[1])</div>

                                        }
                                    }
                                    <div class="cardInfo d-flex justify-content-between align-items-end">
                                        <div class="starBox mt-1">
                                            <div class="d-flex justify-content-start">
                                                <div class="starImg">
                                                    <img src="/img/YellowStar.png" alt="" class="me-1 d-block" />
                                                </div>
                                                <div class="text-black">4.5</div>
                                            </div>
                                            <div class="text-black-50">已賣出<span>100</span></div>
                                        </div>
                                        @*<div>
                <button type="button" class="btn btn-outline-warning buybtn">加入購物車</button>
            </div>*@
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }

        </figure>
    </div>
</div>

@section Scripts
{
    <script>
    const pd狀態 = document.querySelector("#PDstage")
    const pd折扣 = document.querySelector("#PDdiscount")
        const pd類別 = document.querySelector("#PDclass")
        let tabid = 0;

    pd狀態.addEventListener("click", () => {
        $("#PDstage").children().addClass("active")
        $("#PDall").children().removeClass("active")
        let str = ""
        for (let i = 1; i < 7; i++) {
            let a = "@Url.Content("~/img/product01.png")";
            str += ` <div class="border w-25">
                    <div>
                        <img src='${a}' class="w-100" />
                    </div>
                    <div class="px-1 d-flex flex-column justify-content-between">
                        <div class="cardTitle">商品:筆電</div>
                        <div class="cardPrice">價格:$25000</div>
                        <div class="cardInfo d-flex justify-content-between align-items-end">
                            <div class="d-flex justify-content-start flex-column mt-1">
                                <div class="text-black-50">銷售存量<span>100</span></div>
                            </div>
                        </div>
                    </div>
                </div>`
        }
        $(".aaa").html(str);
    });

        $(".ordernavtabs").click(function (event) {
            tabid = $(event.currentTarget).siblings("input").val();
            $(event.currentTarget).addClass("active");
            $(event.currentTarget).parent().siblings().children("a").removeClass("active");
            //$.getJSON(`/Member/SortOrder`, { sort: sortmethod, tab: tabid }, function (data) {
            //    $("#orderlistbody").html("");
            //    for (let i = 0; i < data.length; i++) {
            //        $("#orderlistbody").append(OrderListItem(data[i]));
            //    }
            //});
        })

    </script>
}
