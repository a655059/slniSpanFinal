@section Scripts{
    <script>
        $("#openonlineservice").click(function(){
            happy_popup("admin");
        })
        $("#openAIservice").click(function () {
            happy_popup("chatbot");
        })

        $(document).on("click", ".faqqueslist",function(){
            $(this).addClass("active").siblings().removeClass("active");
            $.getJSON("/FAQ/GetA",{q:$(this).html()},function(data){
                $(".faqanswer").html(data);
            })
        })

        $(document).on("click", ".faqtypelist", function () {
            $(this).addClass("active").siblings().removeClass("active");
            $.getJSON("/FAQ/GetQ", { t: $(this).html() }, function (data) {
                $(".queslist").html("");
                for(let i = 0;i < data.length;i++)
                {
                    $(".queslist").append(`<a href="#" class="list-group-item list-group-item-action faqqueslist">${data[i]}</a>`);
                }
                $(".queslist").children().eq(0).addClass("active");
            })
            $.getJSON("/FAQ/GetA", { q: $(".queslist").children().eq(0).html() }, function (data) {
                $(".faqanswer").html(data);
            })
        })
    </script>
} 