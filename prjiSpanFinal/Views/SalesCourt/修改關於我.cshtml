        $("#demo1").click(function () {
            let arrayC = [];
            let arrayB = [];

            for (let i = 0; i < $(".checklist").length; i++) {
                arrayB.push($(".checklist")[i].checked);
            }
            /*class="form-select*/
            for (let i = 0; i < $('select[class=form-select] option').length; i++) {
                arrayC.push($('select[class=form-select] option').filter(':selected').val());
            }

            console.log(arrayC)
        })
        $("#demo2").click(function () {
            console.log(
                JSON.stringify($.map($(".checklist"), function (data) {
                    return data.checked
                }))
            )
        })


        $(function () {
            $('input[type="radio"]').on('mousedown', function (evt) {
                evt.preventDefault();
                this.checked = !this.checked;
            }).on('mouseup', function (evt) {
                evt.preventDefault();
            }).on('click', function (evt) {
                evt.preventDefault();
            });
        });

    </script>

}