@model prjiSpanFinal.ViewModels.SalesCourt.C關於我ViewModel
@{
    ViewData["Title"] = "修改關於我";

    iSpanProjectContext dbContext = new iSpanProjectContext();
    var me = dbContext.MemberAccounts.FirstOrDefault(a => a.MemberId == Model.Memberid);
    var categoryName = dbContext.CustomizedCategories.Where(a => a.MemberId == Model.Memberid).Select(a => a.CustomizedCategoryName).ToList();

    string outcname = "";

    foreach (var cname in categoryName) {
        outcname += cname;
        outcname += "\r\n";
    }
}



<div class="row d-flex justify-content-start align-items-center  text-muted py-1 rounded-2" style="font-size:1.1em;background-color:burlywood">
    <div>修改關於我</div>
</div>


<div class="row d-flex justify-content-start align-items-center  text-muted  py-1 rounded-2" style="font-size:1.1em">
    <div class="bg-warning rounded">賣場資訊</div>

    <div class="row">
        <div class="col">
            <div class="text-danger">賣場服務時間(必填)</div>
            <div class="row my-2">
                <div class="col-1">
                    @{
                        if (Model.weekDown != null) { 
                            <input type="checkbox" name="on" value="#" checked ="checked" >        
                        }

                    }
                </div>
                星期
                <div class="col-2">
                    <select name="" size="1" class="form-select form-select-sm" style="width:90px;">
                        <option value="none" selected disabled hidden>@Model.weekDown</option>
                        @{

                            for (int i = 0; i < 7; i++)
                            {
                                <option value="@(i+1)">@(i+1)</option>
                            }
                        }
                    </select>
                </div>
                ~星期
                <div class="col-5">
                    <select name="" size="1" class="form-select form-select-sm" style="width:90px;">
                        <option value="none" selected disabled hidden>@Model.weekUp</option>
                        @{
                            for (int i = 0; i < 7; i++)
                            {
                                <option value="@(i+1)">@(i+1)</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="row my-2">
                <div class="col-1">
                    @{
                        if (Model.timeDown != null)
                        {
                            <input type="checkbox" name="#" value="#" checked="checked">
                        }

                    }

                    
                </div>
                時間
                <div class="col-2">
                    <select name="" size="1" class="form-select form-select-sm" style="width:90px;">
                        <option value="none" selected disabled hidden>@Model.timeDown</option>
                        @{
                            for (int i = 0; i < 10; i++)
                            {
                                <option value="@(i)">0@(i):00</option>
                            }

                            for (int i = 10; i < 24; i++)
                            {
                                <option value="@(i)">@(i):00</option>
                            }
                        }
                    </select>
                </div>
                點~
                <div class="col-2">
                    <select name="" size="1" class="form-select form-select-sm" style="width:90px;">
                        <option value="none" selected disabled hidden>@Model.timeUp</option>
                        @{
                            for (int i = 0; i < 10; i++)
                            {
                                <option value="@(i)">0@(i):00</option>
                            }

                            for (int i = 10; i < 24; i++)
                            {
                                <option value="@(i)">@(i):00</option>
                            }
                        }
                    </select>
                </div>
                點
            </div>
            <p class="my-1">
                <div class="row">
                    <div class="col-1">
                        @{
                            if (Model.takebreak != null)
                            {
                                <input type="checkbox" name="on" value="#" checked="checked">
                            }

                        }
                    </div>
                    每週
                    <div class="col-4">
                        <input type="text" name="#" value="@Model.takebreak" style="width:180px" asp-for="@Model.takebreak">
                    </div>
                    公休
                </div>



            </p>
        </div>
        <div class="col">
            <div class="text-success" >新品上架時間</div>
            @*<input type="text" name="#" value="">*@

            <textarea class="form-control" style="height: 90px; width:570px;"  asp-for="@me.RenewProduct"></textarea>
            <div class="text-success">商品類型</div>
            @*<input type="text" name="#" value="">*@
            
            <textarea class="form-control" style="height: 90px; width:570px;" asp-for="@outcname"></textarea>            
            
                        
            <div class="text-success">賣家類型</div>
            @*<input type="text" name="#" value="">*@
            <textarea class="form-control" style="height: 90px; width:570px;"  asp-for="@me.SellerType"></textarea>
        </div>
    </div>

</div>

<div class="row">
    <div class="col border  border-secondary rounded-3">
        <div class="row d-flex justify-content-start align-items-center  text-muted py-1 rounded-2" style="font-size:1.1em;">
            <div class="bg-warning rounded-2">售後服務</div>
            @*<input type="text" name="#" value="">*@
            <textarea class="form-control" style="height: 184px; width:630px;" asp-for="@me.AfterSales"></textarea>
        </div>
    </div>
    <div class="col border  border-secondary  rounded-3">
        <div class="row d-flex justify-content-start align-items-center  text-muted py-1 rounded-2 " style="font-size: 1.1em;">
            <div class="bg-warning rounded-2">注意事項</div>
            @*<input type="text" name="#" value="">*@
            <textarea class="form-control" style="height: 184px; width:630px;" asp-for="@me.SellerCaution"></textarea>
        </div>
    </div>
</div>

