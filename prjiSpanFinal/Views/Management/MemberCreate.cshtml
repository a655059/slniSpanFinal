@model prjiSpanFinal.Models.CMemberHu

@{
    ViewData["Title"] = "MemberCreate";
}

<h1>創建新會員</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="MemberCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="MemName" class="control-label"></label>
                會員名稱<input asp-for="MemName" class="form-control" />
                <span asp-validation-for="MemName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Phone" class="control-label"></label>
                聯絡電話<input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Address" class="control-label"></label>
                聯絡地址<input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                伊媚兒<input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label"></label>
                登入密碼<input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="MemberStatus" class="control-label"></label>
                會員狀態<select asp-for="MemberStatus" class="form-select">
                    <option value="註冊會員">註冊會員</option>
                    <option value="已刪除">已刪除</option>
                    <option value="停權中">停權中</option>
                    <option value="未完成註冊">未完成註冊</option>
                    <option value="管理員帳號">管理員帳號</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="確認並新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div style="position:relative" class="row">
    <div class="col-6">
        <a href="#" class="btn toTop-arrow"></a>
    </div>
</div>
<div>
    <a asp-action="MemberList" class="btn btn-outline-danger">取消並回到會員列表</a>
</div>

