@model prjiSpanFinal.Models.CMember

@{
    ViewData["Title"] = "MemberCreate";
}

<h1>MemberCreate</h1>

<h4>CMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MemberCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MemName" class="control-label"></label>
                <input asp-for="MemName" class="form-control" />
                <span asp-validation-for="MemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberStatus" class="control-label">會員狀態</label>
                <select asp-for="MemberStatus" class="form-select">
                    <option value="註冊會員">註冊會員</option>
                    <option value="已刪除">已刪除</option>
                    <option value="停權中">停權中</option>
                    <option value="未完成註冊">未完成註冊</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="確認並新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MemberList">回到會員列表</a>
</div>

