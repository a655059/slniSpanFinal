@model IEnumerable<prjiSpanFinal.Models.CProductHu>

@{
    ViewData["Title"] = "ProductList";
}

<h1>ProductList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                產品編號
            </th>
            <th>
                產品名稱
            </th>
            <th>
                商品分類
            </th>
            <th>
                賣家
            </th>
            <th>
                單價
            </th>
            <th>
                庫存量
            </th>
            <th>
                商品狀態
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td >
                    <input class="form-control-plaintext" type="text" readonly value=@item.ProductId>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SmallType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductStatus)
                </td>
                <td>
                    @Html.ActionLink("修改", "ProductEdit", new {  id=item.ProductId }) |
                    @Html.ActionLink("刪除", "ProductDelete", new { id=item.ProductId  }) |
                    @Html.ActionLink("復原", "ProductRecover", new { id=item.ProductId  })
                </td>
            </tr>
        }
    </tbody>
</table>
