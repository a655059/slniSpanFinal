@model prjiSpanFinal.Models.CProductDetailHu

@{
    ViewData["Title"] = "ProductDetailEdit";
}

<h1>ProductDetailEdit</h1>

<h4>CProductDetailHu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProductDetailEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CProductHu.ProductName" class="control-label"></label>
                產品<input asp-for="CProductHu.ProductName" class="form-control" readonly />
                <span asp-validation-for="CProductHu.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                樣式<input asp-for="Style" class="form-control" />
                <span asp-validation-for="Style" class="text-danger"></span>
            </div>
            <div class="form-group">
                庫存數量<input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                單價<input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                圖片<input type="file" name="img" id="img" class="form-control-file">
                <span asp-validation-for="Pic" class="text-danger"></span>
            </div>
            <p> 圖片預覽</p>
            <img id="preview" style="max-height:200px;" />
            <div class="form-group w-100">
                <input type="submit" value="儲存並回到產品清單"class="btn btn-outline-warning mt-2 mb-2 w-50" /> 
                @Html.ActionLink("取消","ProductDetailList","Management",new{id=Model.ProductId},new{@class="btn btn-outline-danger w-50"})
            </div>
        </form>
    </div>
</div>






@section Scripts {
    <script>
        $('#img').on('change', function (e) {
            const file = this.files[0];
            const objectURL = URL.createObjectURL(file);    // 使用 createObjectURL 產生圖片url
            $('#preview').attr('src', objectURL);
        });
    </script>
}
