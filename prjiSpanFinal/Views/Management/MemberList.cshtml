@model IEnumerable<prjiSpanFinal.Models.CMember>

@{
    ViewData["Title"] = "MemberList";
}

<h1>會員列表</h1>

<p>
    <a asp-action="MemberCreate">創建新會員</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input value="@item.Id" class="form-control" readonly />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberStatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "MemberEdit", new { id=item.Id}) |
                    @Html.ActionLink("Delete", "MemberDelete", new { id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
